{% set product_path = path('shop_product',{'category_slug':product.categorySlug,'product_slug':product.slug})%}

<div class="product-thumb">
    <div class="image">
        {% if  product.getPreviewImage()%}
        <a href="{{product_path}}"><img
                src="{{ product.getPreviewImage().getSrc()| apply_filter('prod_thumb')  }}"/></a>
        {% endif%}
    </div>
    {% if product.price>0 %}
    <div class="price"><a href="{{product_path}}">Цена: <span class="value">{{product.price}}</span> <span class="curr">руб.</span></a></div>
    {% endif%}
    <div class="title"><a href="{{product_path}}">{{ product.name }}</a></div>

</div>